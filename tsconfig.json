// tsconfig.json
{
  "compilerOptions": {
	"allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "@dcloudio/types"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": ["./types", "node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "unpackage",
    "pages/**/*.nvue",
	"**/*.spec.ts"
  ]
}
